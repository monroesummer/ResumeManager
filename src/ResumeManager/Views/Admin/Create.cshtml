@model ResumeManager.Models.User
@{
    ViewBag.Title = "Добавление Администратора";
}
<form asp-action="Create" asp-controller="Admin">
    <div class="container-fluid">
        <div class="panel panel-primary">
            <div class="panel-heading">Добавление Администратора</div>
            <div class="panel-body">
                <div class="validation" asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <label asp-for="Username" class="control-label">Логин</label>
                    <input type="text" asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username" />
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label">Пароль</label>
                    <input type="text" asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-lg btn-block">Добавить</button>
        </div>
        <a href="~/Admin/Admins" class="btn btn-primary btn-lg btn-block" role="button">Назад</a>
    </div>
</form>

