<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <!--jQuery--->
    <script src="~/lib/jquery/dist/jquery.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.18.1/moment.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/js/bootstrap-datepicker.js"></script>
    <script src="~/locales/bootstrap-datepicker.ru.min.js"></script>
    
    <!--Validation--->
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.14.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>
    <!--Bootstrap-->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/bootstrap-datepicker.css" />
    <script type="text/javascript">
        $(function () {
            $('#datepicker').datepicker({
                format: 'dd.mm.yyyy',
                language: 'ru'
            });
        });
        
    </script>
    
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <!--меню-->
    <div class="wrap">
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="~/Home/Index">
                        <img alt="Brand" src="https://specnomer.com/i/star.png">
                    </a>
                    <a href="~/Home/Index" class="navbar-brand"></a>
                </div>


                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav navbar-right">
                        @{
                            if (User.Identity.IsAuthenticated)
                            {
                                <li><a href="~/Competitor/Competitors">Соискатели</a></li>
                                <li><a href="~/Company/Companies">Компании</a></li>
                                <li><a href="~/Admin/Admins">Администраторы</a></li>
                                <li><a href="~/Account/Logout">Выйти</a></li>
                            }
                            else
                            {
                                <li><a href="~/Account/Login">Войти</a></li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </nav>
        <!--основной контент-->
        <div class="container">

            @RenderBody()

        </div>

    </div>
    <!--Футер-->
    <div class="footer">
        <div class="container">
            &copy; 2017 Resume Manager. All rights reserved.
        </div>
    </div>
  
</body>
</html>
